<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Compressed, x10 StatFactor - MaxHitPoints -->
	<!-- ================ Sandstone ================ -->

	<ThingDef ParentName="StoneBlocksBase">
		<defName>CompressedBlocksSandstone</defName>
		<label>compressed sandstone blocks</label>
		<description>Blocks of solid sandstone. Sandstone is a relatively soft rock and chips easily.</description>
		<graphicData>
			<color>(126,104,94)</color>
		</graphicData>
		<statBases>
			<Mass>1</Mass>
			<SharpDamageMultiplier>0.5</SharpDamageMultiplier>
		</statBases>
		<stuffProps>
			<color>(126,104,94)</color>
			<soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
			<soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
			<stuffAdjective>compressed sandstone</stuffAdjective>
			<statFactors>
				<Beauty>1.1</Beauty>  
				<MaxHitPoints>14</MaxHitPoints>
				<WorkToBuild>5.0</WorkToBuild>
				<WorkToMake>1.1</WorkToMake>
			</statFactors>
		</stuffProps>
	</ThingDef>

	
