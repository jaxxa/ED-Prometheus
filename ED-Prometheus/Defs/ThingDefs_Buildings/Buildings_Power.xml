<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="EDSN_BuildingBase">
		<defName>QuantumPowerRelay</defName>
		<label>Quantum Power Relay</label>
		<description>Stores electricity for later use. Charged batteries explode when exposed to rain or fire.</description>
		<thingClass>EnhancedDevelopment.Prometheus.Power.Building_QuantumPowerRelay</thingClass>
		<graphicData>
			<texPath>Things/Building/Power/Battery</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,3)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.40</fillPercent>
		<tickerType>Normal</tickerType>
		<researchPrerequisites>
			<li>Research_ED_Prometheus_Quest_Unlock</li>
			<li>Research_ED_Prometheus_PowerDistribution_1</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>800</WorkToBuild>
			<Mass>20</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>-15</Beauty>
		</statBases>
		<size>(1,2)</size>
		<costList>
			<Steel>70</Steel>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<comps>
			<li Class="EnhancedDevelopment.Prometheus.Fabrication.CompProperties_Fabricated">
				<RequiredPower>500</RequiredPower>
				<RequiredMaterials>200</RequiredMaterials>
				<RequiredWork>90</RequiredWork>
			</li>
			<li Class="CompProperties_Battery">
				<storedEnergyMax>400</storedEnergyMax>
				<efficiency>1.0</efficiency>
				<shortCircuitInRain>false</shortCircuitInRain>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<designationCategory>Power</designationCategory>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<constructEffect>ConstructMetal</constructEffect>
		<designationHotKey>Misc4</designationHotKey>
		<canOverlapZones>false</canOverlapZones>
	</ThingDef>
	
	<!--================================ Lasers ======================================-->

	<ThingDef ParentName="EDSN_BuildingBase">
		<defName>LaserDrill</defName>
		<label>Laser Steam Geyser Drill</label>
		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Things/Buildings/LaserDrill</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(6,6)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<tickerType>Rare</tickerType>
		<statBases>
			<WorkToBuild>1800</WorkToBuild>
			<MaxHitPoints>350</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Mass>100</Mass>
		</statBases>
		<description>Mines out rock to create a large hole through to the steam networks below the planets surface.</description>
		<building>
			<wantsHopperAdjacent>false</wantsHopperAdjacent>
		</building>
		<comps>
			<li Class="EnhancedDevelopment.Prometheus.Fabrication.CompProperties_Fabricated">
				<RequiredPower>500</RequiredPower>
				<RequiredMaterials>200</RequiredMaterials>
				<RequiredWork>90</RequiredWork>
			</li>
			<li Class="EnhancedDevelopment.Prometheus.LaserDrill.CompProperties_LaserDrill">
				<FillMode>False</FillMode>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1200</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<size>(6,6)</size>
		<costList>
			<ComponentSpacer>10</ComponentSpacer>
			<Steel>600</Steel>
		</costList>
		<hasInteractionCell>False</hasInteractionCell>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Power</designationCategory>
		<staticSunShadowHeight>0.75</staticSunShadowHeight>
		<researchPrerequisites>
			<li>Research_ED_Prometheus_Quest_Unlock</li>
			<li>Research_ED_Prometheus_PowerDistribution_2</li>
		</researchPrerequisites>
	</ThingDef>


	<ThingDef ParentName="EDSN_BuildingBase">
		<defName>LaserFiller</defName>
		<label>Laser Steam Geyser Filler</label>
		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Things/Buildings/LaserFiller</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>1</fillPercent>
		<specialDisplayRadius>5</specialDisplayRadius>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>6000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Mass>100</Mass>
		</statBases>
		<tickerType>Rare</tickerType>
		<description>Removes a nearby SteamGeyser by filling it with rock and melting that rock with a laser to create a buildable surface</description>
		<size>(3,3)</size>
		<costList>
			<ComponentSpacer>4</ComponentSpacer>
		</costList>
		<costStuffCount>500</costStuffCount>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<comps>
			<li Class="EnhancedDevelopment.Prometheus.Fabrication.CompProperties_Fabricated">
				<RequiredPower>500</RequiredPower>
				<RequiredMaterials>200</RequiredMaterials>
				<RequiredWork>90</RequiredWork>
			</li>
			<li Class="EnhancedDevelopment.Prometheus.LaserDrill.CompProperties_LaserDrill">
				<FillMode>True</FillMode>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1200</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Power</designationCategory>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<building>
			<soundAmbient>GeothermalPlant_Ambience</soundAmbient>
		</building>
		<researchPrerequisites>
			<li>Research_ED_Prometheus_Quest_Unlock</li>
			<li>Research_ED_Prometheus_PowerDistribution_2</li>
		</researchPrerequisites>
	</ThingDef>

	
</Defs>