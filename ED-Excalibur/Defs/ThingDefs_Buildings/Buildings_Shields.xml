<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>Building_ShieldStandard</defName>
		<label>Standard Shield</label>
		<description>Creates shield field to protect important infrastructure.</description>
		<thingClass>EnhancedDevelopment.Excalibur.Shields.Building_Shield</thingClass>
		<researchPrerequisites>
			<li>Research_ED_ShieldGenerators</li>
		</researchPrerequisites>
		<graphicData>
			<texPath>Things/ShieldBuilding_Blue</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>

		<thingCategories>
			<li>BuildingsSpecial</li>
		</thingCategories>
		<uiIconPath>Things/ShieldBuilding_Blue</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<minifiedDef>MinifiedThing</minifiedDef>
		<blockLight>true</blockLight>
		<drawerType>MapMeshAndRealTime</drawerType>
		<staticSunShadowHeight>1.0</staticSunShadowHeight>
		<fillPercent>1</fillPercent>
		<size>(3,3)</size>
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Security</designationCategory>
		<holdsRoof>false</holdsRoof>
		<specialDisplayRadius>8</specialDisplayRadius>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>2000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-2</Beauty>
			<Mass>50</Mass>
		</statBases>
		<costList>
			<Steel>100</Steel>
			<Silver>100</Silver>
			<Component>15</Component>
		</costList>
		<inspectorTabs>
			<li>EnhancedDevelopment.Excalibur.Shields.ITab_ShieldGenerator</li>
		</inspectorTabs>
		<passability>Impassable</passability>
		<selectable>true</selectable>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1000</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Facility">
				<maxSimultaneous>1</maxSimultaneous>
			</li>
			<li Class="EnhancedDevelopment.Excalibur.Shields.CompProperties_ShieldGenerator">

				<m_FieldIntegrity_Initial>100</m_FieldIntegrity_Initial>
				<m_FieldIntegrity_Max_Base>2000</m_FieldIntegrity_Max_Base>
				<m_Field_Radius_Base>8</m_Field_Radius_Base>

				<m_PowerRequiredCharging_Base>-1500</m_PowerRequiredCharging_Base>
				<m_PowerRequiredSustaining_Base>-1000</m_PowerRequiredSustaining_Base>


				<m_RechargeTickDelayInterval_Base>15</m_RechargeTickDelayInterval_Base>
				<m_RechargeAmmount_Base>1</m_RechargeAmmount_Base>
				<m_RecoverWarmupDelayTicks_Base>900</m_RecoverWarmupDelayTicks_Base>

				<m_BlockIndirect_Avalable>true</m_BlockIndirect_Avalable>
				<m_BlockDirect_Avalable>true</m_BlockDirect_Avalable>
				<m_InterceptDropPod_Avalable>false</m_InterceptDropPod_Avalable>
				<m_StructuralIntegrityMode>false</m_StructuralIntegrityMode>

			</li>
		</comps>
	</ThingDef>

</Defs>